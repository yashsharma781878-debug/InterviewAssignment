trigger ContectTrigger on Contact ( after insert , after update , After Delete) {
    if(Trigger.isInsert){
        if(Trigger.isAfter){
           ContactTriggerHandler.handleAfterInsert(Trigger.new); 
        }
    }
    if(Trigger.isUpdate){
        if(Trigger.isAfter){
           ContactTriggerHandler.handleAfterUpdate(Trigger.oldMap , Trigger.new); 
        }
    }
    if(Trigger.isDelete){
        if(Trigger.isAfter){
           ContactTriggerHandler.handleAfterDelete(Trigger.old); 
        }
    }
}
